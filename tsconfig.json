{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
        "#components/*": ["./src/components/*"],
        "#config/*": ["./src/config/*"],
        "#request": ["./src/request"],
        "#resources": ["./resources"],
        "#resources/*": ["./resources/*"],
        "#schema": ["./src/schema"],
        "#re-map": ["./src/vendor/re-map"],
        "#hooks": ["./src/hooks"],
        "#hooks/*": ["./src/hooks/*"],
        "#ts": ["./src/ts"],
        "#utils/*": ["./src/utils/*"],
        "#views/*": ["./src/views/*"]
    }
  },
  "include": [
    "src"
  ]
}
